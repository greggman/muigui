{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist/0.x",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "build/**/*.js",
    "examples/**/*.js",
    "test/**/*.js",
    ".eslintrc.cjs",
    "*.js",
  ],
  "exclude": [
    "examples/3rdParty/**/*.js",
    "test/mocha.js",
    "out/**/*.js",
    "build/out/**/",
  ],
}